<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>FirstName_rules</fullName>
    <active>true</active>
    <errorConditionFormula>OR(ISBLANK(FirstName__c ) ,  LEN(FirstName__c ) &lt; 3)</errorConditionFormula>
    <errorDisplayField>FirstName__c</errorDisplayField>
    <errorMessage>FirstName is requried and must be greater than 2 alphabet.</errorMessage>
</ValidationRule>
