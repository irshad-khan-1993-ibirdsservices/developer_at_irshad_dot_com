<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>LastName_rules</fullName>
    <active>true</active>
    <errorConditionFormula>OR( ISBLANK( LastName__c ),  LEN(LastName__c )  &gt; 30 )</errorConditionFormula>
    <errorDisplayField>LastName__c</errorDisplayField>
    <errorMessage>LastName should not be execeed by 30 alphabets.</errorMessage>
</ValidationRule>
